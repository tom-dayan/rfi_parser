# Database
DATABASE_URL=sqlite:///./rfi_parser.db

# AI Service Provider (ollama, claude, or gemini)
AI_PROVIDER=claude

# Ollama Configuration (if using Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Claude API Configuration (if using Claude)
CLAUDE_API_KEY=
# Model options: claude-3-haiku-20240307 (cheap), claude-sonnet-4-20250514 (recommended), claude-opus-4-20250514 (best)
CLAUDE_MODEL=claude-sonnet-4-20250514

# Google Gemini API Configuration (if using Gemini - recommended for free tier)
# Get your API key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash-lite

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# CORS
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# ============================================
# Knowledge Base / Shared Folders Configuration
# ============================================

# Shared folder roots (comma-separated paths)
# Windows example: C:\SharedFolders\Projects,D:\Drawings
# macOS example: /Volumes/Shared/Projects,/Users/Shared/Drawings
SHARED_FOLDERS_ROOT=

# Allowed file extensions (comma-separated, with dots)
ALLOWED_EXTENSIONS=.pdf,.docx,.doc,.txt,.md,.dwg,.dxf,.png,.jpg,.jpeg,.gif,.csv,.json,.xml,.xlsx,.xls,.rvt

# Auto-index shared folders on startup (true/false)
# Set to false for faster startup during development
AUTO_INDEX_ON_STARTUP=true

# Maximum file size for parsing (bytes, default: 50MB)
MCP_MAX_FILE_SIZE=52428800

# Content cache TTL in seconds (default: 24 hours)
MCP_CACHE_TTL=86400

# Maximum cached items
MCP_CACHE_MAX_ITEMS=1000

# Logging level (DEBUG, INFO, WARNING, ERROR)
MCP_LOG_LEVEL=INFO

# Log file path (optional, leave empty for console only)
MCP_LOG_FILE=
